<h3>All Bugs</h3>

<thead>

    @foreach (var bug in Bugs)
    {
        <tr>
            <th>@bug.Id</th>
            <th>@bug.Title</th>
            <th>@bug.Description</th>
            <th>@bug.Priority</th>
        </tr>
    }

</thead>

@code {

    [Inject]
    public IBugService BugService { get; set; }

    public List<Bug> Bugs;

    protected override void OnInitialized()
    {
        Bugs = BugService.GetBugs().OrderBy(x => x.Priority).ToList<Bug>();

        base.OnInitialized();
    }
}
